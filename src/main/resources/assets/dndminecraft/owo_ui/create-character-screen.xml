<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19.3/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children> <!---->
                <flow-layout direction="horizontal">
                    <children>
                        <label>
                            <text>Create Character</text>
                        </label>
                        <flow-layout direction="horizontal"> <!---->
                            <children>
                                <label>
                                    <text>Characters Name </text>
                                </label>
                                <text-box id = "name">
                                    <sizing>
                                        <vertical method="fixed">10</vertical>
                                        <horizontal method="fixed">80</horizontal>
                                    </sizing>
                                </text-box>
                            </children>

                            <horizontal-alignment>center</horizontal-alignment>
                            <vertical-alignment>center</vertical-alignment>

                            <!---->
                            <padding>
                                <all>5</all>
                            </padding>
                            <surface>
                                <panel dark="true"/>
                            </surface>
                        </flow-layout>
                    </children>
                    <gap>4</gap>
                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                    <positioning type="relative">4,3</positioning>
                </flow-layout>
                <flow-layout direction="horizontal">
                    <children>
                        <label>
                            <text>Race</text>
                        </label>
                    </children>
                    <positioning type="relative">3,13</positioning>
                </flow-layout>
                <box id="the-box">
                    <color>dark-gray</color>
                    <fill>true</fill>
                    <direction>top-to-bottom</direction>

                    <sizing>
                        <vertical method="fixed">400</vertical>
                        <horizontal method="fixed">250</horizontal>
                    </sizing>
                    <positioning type="absolute">30,80</positioning>
                </box>
                <flow-layout direction="vertical">
                    <children>
                        <collapsible expanded="false">
                            <children>
                                <flow-layout direction="horizontal">
                                    <children>
                                        <flow-layout direction="horizontal">
                                            <children>
                                                <button>
                                                    <text>monster type 1</text>
                                                </button>
                                            </children>
                                        </flow-layout>
                                    </children>
                                </flow-layout>
                            </children>
                            <text>Appearance</text>
                        </collapsible>
                        <collapsible expanded="false">
                            <children>
                                <flow-layout direction="horizontal">
                                    <children>
                                        <flow-layout direction="vertical">
                                            <children>
                                                <button>
                                                    <text>monster type 1</text>
                                                </button>
                                                <button>
                                                    <text>monster type 2</text>
                                                </button>
                                            </children>
                                        </flow-layout>
                                    </children>
                                </flow-layout>
                            </children>
                            <text>Appearance 2</text>
                        </collapsible>
                    </children>

                    <horizontal-alignment>left</horizontal-alignment>
                    <vertical-alignment>top</vertical-alignment>

                    <padding>
                        <all>10</all>
                    </padding>
                    <positioning type="absolute">30,80</positioning>
                </flow-layout>
                <box id="the-box-2">
                    <color>dark-gray</color>
                    <fill>true</fill>
                    <direction>top-to-bottom</direction>

                    <sizing>
                        <vertical method="fixed">400</vertical>
                        <horizontal method="fixed">400</horizontal>
                    </sizing>

                    <positioning type="absolute">500,80</positioning>
                </box>

                <flow-layout direction="horizontal">
                    <children>
                        <button>
                            <text>Continue</text>
                        </button>
                    </children>
                    <positioning type="relative">98,4</positioning>
                    <padding>
                        <all>5</all>
                    </padding>
                    <surface>
                        <panel dark="true"/>
                    </surface>
                </flow-layout>
            </children>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>

    <templates>
        <property-text-box>
            <flow-layout direction="horizontal">
                <children>
                    <text-box id="{{property}}-text-box">
                        <sizing>
                            <horizontal method="fixed">50</horizontal>
                        </sizing>
                        <text>0</text>
                    </text-box>

                    <label>
                        <text>{{property-name}}</text>
                        <shadow>true</shadow>
                        <margins>
                            <left>5</left>
                        </margins>
                    </label>
                </children>

                <margins>
                    <vertical>2</vertical>
                </margins>

                <vertical-alignment>center</vertical-alignment>
            </flow-layout>
        </property-text-box>
        <property-text>
            <flow-layout direction="horizontal">
                <children>
                    <label>
                        <text>{{property-name}}</text>
                        <shadow>true</shadow>
                        <margins>
                            <left>5</left>
                        </margins>
                    </label>
                </children>

                <margins>
                    <vertical>2</vertical>
                </margins>

                <vertical-alignment>center</vertical-alignment>
            </flow-layout>
        </property-text>
    </templates>
</owo-ui>
